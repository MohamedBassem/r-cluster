server {
  listen 5056;

  index index.html;

  server_name localhost;

  location /run {
    proxy_pass http://localhost:5055;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }

  location /uploadcode {
    proxy_pass http://localhost:5055;
  }


  location /static {
    root /mnt/nfs/working_dir;
    try_files $uri $uri/ =404;
  }

  location / {
    root /home/mohamedbassem/repos/go/src/github.com/MohamedBassem/r-cluster/templates;
    try_files $uri $uri/ =404;
  }

  location /assets {
    root /home/mohamedbassem/repos/go/src/github.com/MohamedBassem/r-cluster;
    try_files $uri $uri/ =404;
  }

}
